// Intercalar dos vectores A y B clasificados ascendentemente de tamaño n y m respectivamente en uno solo de tal forma que el resultado sea un vector clasificado. con vectores
#include <iostream>
#include <vector>
using namespace std;
int main() {
    int n, m;
    cout << "Ingrese el tamaño del vector A: ";
    cin >> n;
    cout << "Ingrese el tamaño del vector B: ";
    cin >> m;

    vector<int> A(n);
    vector<int> B(m);
    vector<int> C(n + m);

    cout << "Ingrese los elementos del vector A en orden ascendente:" << endl;
    for (int i = 0; i < n; i++) {
        cin >> A[i];
    }

    cout << "Ingrese los elementos del vector B en orden ascendente:" << endl;
    for (int j = 0; j < m; j++) {
        cin >> B[j];
    }

    int i = 0, j = 0, k = 0;
    while (i < n && j < m) {
        if (A[i] < B[j]) {
            C[k++] = A[i++];
        } else {
            C[k++] = B[j++];
        }
    }

    while (i < n) {
        C[k++] = A[i++];
    }

    while (j < m) {
        C[k++] = B[j++];
    }

    cout << "Vector intercalado C:" << endl;
    for (int x = 0; x < n + m; x++) {
        cout << C[x] << " ";
    }
    cout << endl;

    return 0;
}
