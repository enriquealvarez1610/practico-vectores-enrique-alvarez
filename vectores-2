//2.	Hacer un programa para sacar el m√≠nimo valor de un vector de valores ya sean reales o enteros. con vectores
#include <iostream>
#include <vector>   
using namespace std;
int main() {
    int n;
    cout << "Ingrese la cantidad de elementos del vector: ";
    cin >> n;

    vector<int> valores(n);
    cout << "Ingrese los elementos del vector:" << endl;
    for (int i = 0; i < n; i++) {
        cin >> valores[i];
    }

    int minimo = valores[0];
    for (int i = 1; i < n; i++) {
        if (valores[i] < minimo) {
            minimo = valores[i];
        }
    }

    cout << "El valor minimo del vector es: " << minimo << endl;
    return 0;
}
