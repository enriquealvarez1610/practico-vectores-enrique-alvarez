//16.	Confeccionar en un menú para manejar alumnos con las siguiente funciones: 1) Ingresar un alumno y su nota 2) Listar los alumnos 3) Ordenar alfabéticamente 4) Sacar la mejor nota 5) Sacar el promedio de notas. con vectores y funciones
#include <iostream>
#include <vector>
#include <string>
#include <algorithm>
using namespace std;
struct Alumno {
    string nombre;
    float nota;
};
void ingresarAlumno(vector<Alumno>& alumnos) {
    Alumno nuevoAlumno;
    cout << "Ingrese el nombre del alumno: ";
    cin >> nuevoAlumno.nombre;
    cout << "Ingrese la nota del alumno: ";
    cin >> nuevoAlumno.nota;
    alumnos.push_back(nuevoAlumno);
}
void listarAlumnos(const vector<Alumno>& alumnos) {
    cout << "Lista de alumnos:\n";
    for (const auto& alumno : alumnos) {
        cout << "Nombre: " << alumno.nombre << ", Nota: " << alumno.nota << endl;
    }
}
void ordenarAlfabeticamente(vector<Alumno>& alumnos) {
    sort(alumnos.begin(), alumnos.end(), [](const Alumno& a, const Alumno& b) {
        return a.nombre < b.nombre;
    });
}
float sacarMejorNota(const vector<Alumno>& alumnos) {
    float mejorNota = -1.0;
    for (const auto& alumno : alumnos) {
        if (alumno.nota > mejorNota) {
            mejorNota = alumno.nota;
        }
    }
    return mejorNota;
}
float sacarPromedioNotas(const vector<Alumno>& alumnos) {
    float suma = 0.0;
    for (const auto& alumno : alumnos) {
        suma += alumno.nota;
    }
    return alumnos.empty() ? 0.0 : suma / alumnos.size();
}
int main() {
    vector<Alumno> alumnos;
    int opcion;
    do {
        cout << "\nMenu:\n";
        cout << "1. Ingresar un alumno y su nota\n";
        cout << "2. Listar los alumnos\n";
        cout << "3. Ordenar alfabeticamente\n";
        cout << "4. Sacar la mejor nota\n";
        cout << "5. Sacar el promedio de notas\n";
        cout << "6. Salir\n";
        cout << "Seleccione una opcion: ";
        cin >> opcion;
        switch (opcion) {
            case 1:
                ingresarAlumno(alumnos);
                break;
            case 2:
                listarAlumnos(alumnos);
                break;
            case 3:
                ordenarAlfabeticamente(alumnos);
                cout << "Alumnos ordenados alfabeticamente.\n";
                break;
            case 4: {
                float mejorNota = sacarMejorNota(alumnos);
                if (mejorNota >= 0.0) {
                    cout << "La mejor nota es: " << mejorNota << endl;
                } else {
                    cout << "No hay alumnos registrados.\n";
                }
                break;
            }
            case 5: {
                float promedio = sacarPromedioNotas(alumnos);
                cout << "El promedio de notas es: " << promedio << endl;
                break;
            }
            case 6:
                cout << "Saliendo del programa.\n";
                break;
            default:
                cout << "Opcion invalida. Intente de nuevo.\n";
        }
    } while (opcion != 6);
    return 0;
}

