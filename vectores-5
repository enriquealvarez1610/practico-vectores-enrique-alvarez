//5.	Hacer un programa para determinar si un vector es capicúa, es decir, si el vector revertido es igual al inicial, se dice que el vector es capicúa. con vectores
#include <iostream>
#include <vector>   
using namespace std;
int main() {
    int n;
    cout << "Ingrese la cantidad vectores: ";
    cin >> n;

    vector<int> original(n);
    cout << "Ingrese los valores del vector:" << endl;
    for (int i = 0; i < n; ++i) {
        cin >> original[i];
    }

    vector<int> reverso(n);
    for (int i = 0; i < n; ++i) {
        reverso[i] = original[n - 1 - i];
    }

    bool esCapicua = true;
    for (int i = 0; i < n; ++i) {
        if (original[i] != reverso[i]) {
            esCapicua = false;
            break;
        }
    }

    if (esCapicua) {
        cout << "El vector es capicúa." << endl;
    } else {
        cout << "El vector no es capicúa." << endl;
    }

    return 0;
}
