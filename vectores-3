//	Hacer un programa para sacar el promedio de valores de un vector. hazlo con vectores y que el ususuario ingrese la cantidad de vectores que quiera promediaqr
#include <iostream>
#include <vector>
using namespace std;
int main() {
    int size;
    cout << "Ingrese la cantidad de vectores: ";
    cin >> size;
        vector<float> valores(size);
    float suma = 0.0;

    // Ingresar valores al vector
    cout << "Ingrese " << size << " vectores:" << endl;
    for (int i = 0; i < size; i++) {
        cout << "Vector " << (i + 1) << ": ";
        cin >> valores[i];
        suma += valores[i];
    }

    // Calcular el promedio
    float promedio = suma / size;

    // Mostrar el promedio
    cout << "El promedio de los vectores ingresados es: " << promedio << endl;

    return 0;
}
