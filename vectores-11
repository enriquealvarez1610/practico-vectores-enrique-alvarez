//	Hacer un programa que permita contar n√∫mero de valores negativos, positivos y ceros que hay en un vector. con vectores
#include <iostream>
#include <vector>
using namespace std;
int main() {
    int n;
    cout << "Ingrese la cantidad de valores del vector: ";
    cin >> n;

    vector<int> valores(n);
    int positivos = 0, negativos = 0, ceros = 0;

    // Ingresar valores al vector
    for (int i = 0; i < n; ++i) {
        cout << "Ingrese el valor " << i + 1 << ": ";
        cin >> valores[i];

        // Contar positivos, negativos y ceros
        if (valores[i] > 0) {
            positivos++;
        } else if (valores[i] < 0) {
            negativos++;
        } else {
            ceros++;
        }
    }

    // Mostrar resultados
    cout << "Cantidad de valores positivos: " << positivos << endl;
    cout << "Cantidad de valores negativos: " << negativos << endl;
    cout << "Cantidad de ceros: " << ceros << endl;

    return 0;
}
