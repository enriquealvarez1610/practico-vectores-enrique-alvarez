//8.	Dado un vector A de n números reales, obténgase la diferencia más grande entre dos elementos consecutivos de este vector. con vectores
#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n;
    cout << "Ingrese la cantidad de elementos del vector: ";
    cin >> n;

    vector<double> A(n);
    cout << "Ingrese los elementos del vector:" << endl;
    for (int i = 0; i < n; ++i) {
        cin >> A[i];
    }

    double maxDiferencia = 0.0;
    for (int i = 0; i < n - 1; ++i) {
        double diferencia = abs(A[i] - A[i + 1]);
        if (diferencia > maxDiferencia) {
            maxDiferencia = diferencia;
        }
    }

    cout << "La diferencia más grande entre dos elementos consecutivos es: " << maxDiferencia << endl;

    return 0;
}
