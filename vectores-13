// 	Hacer un programa para revertir una lista en el mismo vector. con vectores en c++
#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main() {
    int n;
    cout << "Ingrese la cantidad de elementos del vector: ";
    cin >> n;

    vector<int> numeros(n);
    cout << "Ingrese los elementos del vector:" << endl;
    for (int i = 0; i < n; ++i) {
        cin >> numeros[i];
    }

    // Revertir el vector
    reverse(numeros.begin(), numeros.end());

    cout << "Vector revertido:" << endl;
    for (int num : numeros) {
        cout << num << " ";
    }
    cout << endl;

    return 0;
}
